{
  "name": "hmi-electron",
  "version": "1.0.0",
  "main": "main.js",
  "description": "Electron wrapper for HMI React app",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "predist": "node copy-build.js",
    "dist": "electron-builder",
    "predist32": "node copy-build.js",
    "dist32": "electron-builder --win --ia32"
  },
  "devDependencies": {
    "electron": "^17.4.0",
    "electron-builder": "^24.6.0"
  },
  "author": "Your Name",
  "build": {
    "appId": "com.yourcompany.hmi",
    "productName": "CNC Dual head",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "build/**/*"
    ],
    "asar": false,
    "win": {
      "target": "nsis"
    }
  }
}
